<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_a"
    tools:context=".DomicilioActivity">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="370dp"
        android:layout_height="560dp"
        android:background="#CEE3AC81"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="#CE733302"
                android:fontFamily="sans-serif"
                android:text="Entrega a domicilio"
                android:textAlignment="center"
                android:textColor="#030A30"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="16dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/textViewID"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="#CEE37926"
                android:fontFamily="sans-serif"
                android:text=" ID de pedido: "
                android:textAlignment="textStart"
                android:textColor="#070707"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#CEB1863B"
                android:textAlignment="center"
                app:srcCompat="@drawable/entregas"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="576dp" />

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="370dp"
                android:layout_height="41dp"
                android:background="#CEB1863B"
                android:text="Total del pedido: $"
                android:textAlignment="textStart"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewPedido"
                android:layout_width="370dp"
                android:layout_height="61dp"
                android:background="#CEB1863B"
                android:text="Descripcion del pedido: "
                android:textAlignment="textStart"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:text=""
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="82dp" />
            <TextView
                android:id="@+id/textViewDom"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="#CEE37926"
                android:fontFamily="sans-serif"
                android:text="Domicilio:"
                android:textAlignment="textStart"
                android:textColor="#030A30"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="(*) campos importantes para poder brindarle un mejor servicio :) : "
                android:textColor="#283E0D"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="82dp" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="vertical"
                android:rowCount="2">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="185dp"
                    android:layout_height="41dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="#CEE37926"
                    android:text="Localidad  *"
                    android:textAlignment="center"
                    android:textColor="#0B0A0A"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="82dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="185dp"
                    android:layout_height="41dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="#CEE37926"
                    android:text="Calle *"
                    android:textAlignment="center"
                    android:textColor="#0B0A0A"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="82dp" />

                <EditText
                    android:id="@+id/editTextCalle"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Ingrese su direccion"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <AutoCompleteTextView
                    android:id="@+id/mtcLocalidad"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:hint="Ingrese su localidad"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </GridLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:text=""
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="82dp" />



            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="#CEE37926"
                android:text="Tomar foto de referencia (opcional)"
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="82dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:orientation="vertical"
                android:rowCount="1">

                <ImageButton
                    android:id="@+id/imgBtnCam"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:backgroundTint="#0E930F"
                    app:srcCompat="@android:drawable/ic_menu_camera" />
                <ImageView
                    android:id="@+id/imageFoto"
                    android:layout_width="290dp"
                    android:layout_height="270dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="144dp"/>

            </GridLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btnPedido"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:backgroundTint="#0E930F"
        android:text="Realizar pedido"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>